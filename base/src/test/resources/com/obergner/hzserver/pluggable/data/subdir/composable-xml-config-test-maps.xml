<hazelcast
    xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-2.4.xsd"
    xmlns="http://www.hazelcast.com/schema/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <map
        name="default">
        <backup-count>1</backup-count>
        <time-to-live-seconds>0</time-to-live-seconds>
        <max-idle-seconds>0</max-idle-seconds>
        <eviction-policy>NONE</eviction-policy>
        <max-size
            policy="cluster_wide_map_size">0</max-size>
        <eviction-percentage>25</eviction-percentage>
        <merge-policy>hz.ADD_NEW_ENTRY</merge-policy>

        <map-store
            enabled="false">
            <properties>
                <property
                    name="syncinterval">1</property>
            </properties>
            <class-name>org.hazelcast.server.persistence.BerkeleyDBStore</class-name>
            <write-delay-seconds>0</write-delay-seconds>
        </map-store>
    </map>

    <map
        name="sequence">
        <backup-count>1</backup-count>
        <time-to-live-seconds>0</time-to-live-seconds>
        <max-idle-seconds>0</max-idle-seconds>
        <eviction-policy>NONE</eviction-policy>
        <max-size
            policy="cluster_wide_map_size">0</max-size>
        <eviction-percentage>25</eviction-percentage>
        <merge-policy>hz.ADD_NEW_ENTRY</merge-policy>

        <map-store
            enabled="true">
            <properties>
                <property
                    name="syncinterval">0</property>
            </properties>
            <class-name>org.hazelcast.server.persistence.BerkeleyDBStore</class-name>
            <write-delay-seconds>0</write-delay-seconds>
        </map-store>
    </map>

</hazelcast>