<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:metrics="http://www.yammer.com/schema/metrics"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.yammer.com/schema/metrics
        http://www.yammer.com/schema/metrics/metrics.xsd">

    <import
        resource="classpath:META-INF/spring/hz-server-hazelcast-context.xml" />
    <import
        resource="classpath:META-INF/spring/hz-server-snmp-context.xml" />
    
	<!-- START-SNIPPET: general settings -->
    <context:mbean-server
        id="com.obergner.hzservermbeanServer" />
    <context:mbean-export
        registration="failOnExisting"
        server="com.obergner.hzservermbeanServer"
        default-domain="com.obergner.hzserver" />
    <context:property-placeholder
        location="classpath:hazelcast-server.properties" />
    <!-- END-SNIPPET: general settings -->

    <!-- START-SNIPPET: metrics support -->
    <metrics:annotation-driven
        metrics-registry="com.obergner.hzservermetricsRegistry"
        health-check-registry="com.obergner.hzserverhealthCheckRegistry"
        proxy-target-class="false" />
    <metrics:metrics-registry
        id="com.obergner.hzservermetricsRegistry" />
    <metrics:health-check-registry
        id="com.obergner.hzserverhealthCheckRegistry" />
    <metrics:jmx-reporter
        id="com.obergner.hzservermetricsJmxReporter"
        metrics-registry="com.obergner.hzservermetricsRegistry" />
	<!-- END-SNIPPET: metrics support -->

</beans>
